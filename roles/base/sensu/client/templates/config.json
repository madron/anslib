{
  "rabbitmq": {
    "ssl": {
      "cert_chain_file": "/etc/sensu/ssl/cert.pem",
      "private_key_file": "/etc/sensu/ssl/key.pem"
    },
    "host": "{{ sensu_rabbitmq_host }}",
    "port": {{ sensu_rabbitmq_port }},
    "user": "sensu",
    "password": "{{ sensu_rabbitmq_password }}",
    "vhost": "/sensu"
  },
  "client": {
    "name": "{{ sensu_client_name|default(ansible_fqdn, true) }}",
    "address": "{{ sensu_client_address|default(ansible_default_ipv4.address, true) }}",
    "subscriptions": ["os-{{ ansible_lsb.id|lower() }}", "os-{{ ansible_lsb.id|lower() }}-{{ ansible_lsb.codename }}"{% for s in sensu_subscriptions %}, "{{ s }}"{% endfor %}]
  }
}
