# Install sensu-client
gem install sensu-client

# Install sensu-raven
gem install sentry-raven

# cd into the repository root
# E.g. cd ~/dev/anslib

# Configure environment
export SENSU_CONFIG_FILES="roles/base/sensu/server/tests/config.json"

cat roles/base/sensu/server/tests/event.json | roles/base/sensu/server/files/handlers/notification/sentry.rb
