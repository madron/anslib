#!/bin/sh

# {{ ansible_managed }}

create_chain()
{
    local chain_name=$1
    iptables -n --list $chain_name >/dev/null 2>&1
    local rc=$?
    if [ "$rc" -eq "1" ]; then
        echo "Adding chain";
        iptables --new $chain_name
    fi
}

{% for chain in iptables_chains %}
create_chain "{{ chain }}"
{% endfor %}

set -e

# Flush INPUT rules on start
iptables --policy INPUT ACCEPT
iptables --flush INPUT

if [ "$1" = "stop" ]; then
   exit 0
fi

{% if iptables_ipset %}
# Drop ipsets
ipset destroy

# Create ipsets
{% for name, value in iptables_ipset.iteritems() %}
ipset create {{ name }} {{ value.type }}
{% for member in value.members %}
ipset add {{ name }} {{ member }}
{% endfor %}
{% endfor %}

{% endif %}

### INPUT
# Rules
{% for rules in iptables_input_rules_list %}
{% for rule in rules %}
iptables --append INPUT {{ rule }}
{% endfor %}
{% endfor %}

# Policy
iptables --policy INPUT DROP
