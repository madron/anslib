docker build -t mtek/zabbix_db:2.4 roles/docker/mtek/zabbix/db/files/docker/
docker build -t mtek/zabbix_base:2.4 roles/docker/mtek/zabbix/base/files/docker/
docker build -t mtek/zabbix_server:2.4 roles/docker/mtek/zabbix/server/files/docker/


# Database
docker run --name mtr_zabbix_db_volume -v /data busybox
docker run -d --name mtr_zabbix_db --volumes-from mtr_zabbix_db_volume -e WAL_KEEP_SEGMENTS=20 mtek/zabbix_db:2.4

# Zabbix
docker run -d --name mtr_zabbix_db --link mtr_zabbix_db:zabbix_server_db -p 10051:10051 mtek/zabbix_server:2.4
